            <script>
                slider();                

                function slider(){
                   let index = 0; 
                   let x = document.getElementsByClassName("photos");   
                    for (let i = 0; i < x.length; i++) {
                        x[i].style.display ="none";                        
                    }
                    index++
                    if(index > x.length){
                        index = 1
                    }
                    x[index-1].style.display = "block";
                    setTimeout(slider, 3000);
                }
                
