<link href="css/theme.css" type="text/css" rel="stylesheet">
<link href="css/pages.css" type="text/css" rel="stylesheet">  
 <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400&display=swap" rel="stylesheet">        

 <%- include('partials/headers') %>
<section>
    <div> 
        <h1>Schedule Your Appointment</h1>       
        <form action="/" method="post">
            <div>
                <label for="userName" class="userInp">User Name</label>
                <input id="userName" type="text" class="allInput" name="userName">
            </div>
            <div>
                <label for="firstName" class="userInp">First Name</label>
                <input id="firstName" type="text" class="allInput" name="firstName">
            </div>
            <div>
                <label for="LastName" class="userInp">Last Name</label>
                <input id="LastName" type="text" class="allInput" name="LastName">
            </div>
            <div>
                <label for="email" class="">Email</label>
                <input id="email" type="email" class="">               
            </div> 
            <div>
                <label for="services" >Service</label>
                <select id="services" name="services">
                    <option value="dd""></option>
                    
                    <% services.forEach((services) => { %>
                        <option value="<%= services.name" %>></option>
                    <% }) %> 
                                       
                </select>  
            </div>            

        </form>
    </div>
</section>
<%- include('partials/footer') %> 